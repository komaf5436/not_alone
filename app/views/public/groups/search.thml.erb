<div>
  <div>
    <div>
      <h1>検索結果</h1>
      
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Group</th>
            <th>Introduction</th>
            <th>Members</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @results.each do |group| %>
          <tr>
            <td>
              <%= image_tag group.get_group_image(100, 100) %>
            </td>
            <td>
              <%= link_to group_path(group.id) do %>
                <%= group.name %>
              <% end %>
            </td>
            <td>
              <%= group.introduction.truncate(25) %>
            </td>
            <td>
              <i class="fas fa-users"></i>
              <%= group.users.cont %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>