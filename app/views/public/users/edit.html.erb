<h1>アカウント編集</h1>

<%= render 'layouts/error_message', resource: @user %>

<%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
  <%= f.label :name, "名前" %>
  <%= f.text_field :name %>
  
  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email %>
  
  <%= f.label :introduction, "紹介文" %>
  <%= f.text_area :introduction %>
  
  <%= f.label :profile_image, "プロフィール画像" %>
  <%= f.file_field :profile_image, accept: "image/*" %>
  
  <%= f.submit "変更保存" %>
<% end %>