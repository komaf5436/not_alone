<div class="container">
  <h1 class="mt-5">マイページ</h1>
  <div class="row">
    <div class="col-md-6">
      <% if @user.id == current_user.id %>
        <div class="mt-4 text-center">
          <%= image_tag @user.get_profile_image(100, 100) %>
        </div>
        <div class="mt-5 text-center">
          <%= link_to "編集", edit_user_path(@user) %>
          <%= link_to "退会", unsubscribe_path(@user) %>
        </div>
      <% else %>
        <%= image_tag @user.get_profile_image(100, 100) %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォローを外す", user_relationships_path(@user), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user), method: :post %>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-5 offset-1 mt-4">
      <% if @user.id == current_user.id %>
        <p>
          Name:</br>
          <%= @user.name %>
        </p>

        <p>
          Introduction:</br>
          <%= @user.introduction %>
        </p>

        <p class="mt-2" style="display: inline-block;">
          Follow:</br>
          <%= link_to user_followings_path(@user) do %>
            <%= @user.followings.count %>
          <% end %>
        </p>

        <p style="display: inline-block; margin-left: 15px;">
          Follower:</br>
          <%= link_to user_followers_path(@user) do %>
            <%= @user.followers.count %>
          <% end %>
        </p>
      <% else %>
        <p>
          Name:</br>
          <%= @user.name %>
        </p>

        <p>
          Introduction:</br>
          <%= @user.introduction %>
        </p>

        <p>
          Follow:</br>
          <%= link_to user_followings_path(@user) do %>
            <%= @user.followings.count %>
          <% end %>
        </p>

        <p>
          Follower:</br>
          <%= link_to user_followers_path(@user) do %>
            <%= @user.followers.count %>
          <% end %>
        </p>
      <% end %>
    </div>
  </div>
</div>