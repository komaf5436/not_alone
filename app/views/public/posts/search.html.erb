<div>
  <div>
    <div>
      <h1>検索結果</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Title</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @results.each do |post| %>
          <tr>
            <td>
              <%= link_to user_path(post.user.id) do %>
                <%= post.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to post_path(post.id) do %>
                <%= post.title %>
              <% end %>
            </td>
            <td>
              <%= render "public/favorites/favorite-btn", post: post %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>