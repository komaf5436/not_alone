<h1>投稿編集</h1>

<%= form_with model: @post, url: post_path(@post), method: :patch, local: true do |f| %>
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title, autofocus: true %>
  
  <%= f.label :body, "テキスト" %>
  <%= f.text_area :body, autofocus: true %>
  
  <%= f.label :images, "画像" %>
  <%= f.file_field :images, multiple: true %>
  
  <!--画像削除の記述-->
  <% if @post.images.present? %>
    <p>登録済画像</p>
    <% @post.images.each do |image| %>
      <%= f.check_box :image_ids, {multiple: true}, image.id, false %>
      <%= image_tag image, size:"100x100" %></br>
    <% end %>
  <% end %>
  
  <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
  <%= f.text_field :name, value: @tag_list, class: "form_control" %>
  
  <%= f.submit "保存" %>
<% end %>