<div class="container mt-sm-5 mb-sm-5 px-sm-0">
  <h5>タグが<i class="fas fa-tag"></i><%= @tag.name %>の投稿一覧</h5>
  
  <!--タグリスト-->
  <div class="row">
    <div class="col-md-2">
      <ul class="list-group">
        <% @tag_list.each do |list| %>
          <li class="list-group-flush">
            <%= link_to tag_search_tag_path(tag_id: list.id) do %>
              <%= list.name %>
            <% end %>
            <%= "(#{list.posts.count})" %>
          </li>
        <% end %>
      </ul>
    </div>
    
    <div class="col-md-9 offset-1">
      <div class="d-flex flex-wrap">
        <% @posts.each do |post| %>
          <div class="card">
            <div class="cord-body">
              <h6 class="card-title">
                <%= post.title.truncate(25) %>
              </h6>
              <p class="card-text">
                <%= post.body.truncate(25) %>
              </p>
              <%= link_to "Take a closer look", post_path(post.id), class: "btn btn-outline-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>