<div>
  <h5>タグが<%= @tag.name %>の投稿一覧</h5>
  
  <!--タグリスト-->
  <% @tag_list.each do |list| %>
    <%= link_to list.name, search_tag_path(tag_id: list.id) do %>
      <%= list.name %>
    <% end %>
    <%= "(#{list.posts.count})" %>
  <% end %>
  
  <% @posts.each do |post| %>
    <div>
      <div>
        <h6>
          <%= link_to post_path(post.id) do %>
            <%= post.title.truncate(25) %>
          <% end %>
        </h6>
      </div>
    </div>
    <% end %>
</div>